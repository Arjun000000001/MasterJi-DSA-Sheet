#include <bits/stdc++.h>
using namespace std;

/*
=================================================
PALINDROME NUMBER â€“ ALL APPROACHES
=================================================
Given an integer x, return true if x is a palindrome,
and false otherwise.

-------------------------------------------------
1) Brute Force Approach (Using Vector)
-------------------------------------------------
Idea:
- Extract all digits
- Store digits in a vector
- Reverse and compare

Time Complexity (TC): O(n)
Space Complexity (SC): O(n)
*/
bool isPalindromeBrute(int x) {
    if(x < 0) return false;

    vector<int> temp;

    while(x > 0) {
        temp.push_back(x % 10);
        x /= 10;
    }

    vector<int> rev = temp;
    reverse(rev.begin(), rev.end());

    return temp == rev;
}

/*
-------------------------------------------------
2) Better Approach (Using String)
-------------------------------------------------
Idea:
- Convert number to string
- Reverse string
- Compare both strings

Time Complexity (TC): O(n)
Space Complexity (SC): O(n)
*/
bool isPalindromeBetter(int x) {
    if(x < 0) return false;

    string s = to_string(x);
    string r = s;
    reverse(r.begin(), r.end());

    return s == r;
}

/*
-------------------------------------------------
3) Optimised Approach (Math Only)
-------------------------------------------------
Idea:
- Reverse only half of the number
- Compare first half with reversed half
- No extra space used

Time Complexity (TC): O(n)
Space Complexity (SC): O(1)
*/
bool isPalindromeOptimal(int x) {
    if(x < 0 || (x % 10 == 0 && x != 0)) return false;

    int rev = 0;

    while(x > rev) {
        rev = rev * 10 + x % 10;
        x /= 10;
    }

    return (x == rev || x == rev / 10);
}

/*
-------------------------------------------------
MAIN (for testing)
-------------------------------------------------
*/
int main() {
    int x = 121;

    cout << "Brute: " << isPalindromeBrute(x) << endl;
    cout << "Better: " << isPalindromeBetter(x) << endl;
    cout << "Optimal: " << isPalindromeOptimal(x) << endl;
}
