#include <bits/stdc++.h>
using namespace std;

/*
=================================================
TWO SUM PROBLEM â€“ ALL APPROACHES
=================================================
Given an array nums and a target,
return indices of the two numbers such that
nums[i] + nums[j] == target

-------------------------------------------------
1) Brute Force Approach
-------------------------------------------------
Idea:
- Try every possible pair

Time Complexity (TC): O(n^2)
Space Complexity (SC): O(1)
*/
vector<int> twoSumBrute(vector<int>& nums, int target) {
    int n = nums.size();
    for(int i = 0; i < n; i++) {
        for(int j = i + 1; j < n; j++) {
            if(nums[i] + nums[j] == target) {
                return {i, j};
            }
        }
    }
    return {-1, -1};
}

/*
-------------------------------------------------
2) Better Approach (Using Map)
-------------------------------------------------
Idea:
- Store value -> index in a map
- For each element, check if (target - value) exists

Time Complexity (TC): O(n)
Space Complexity (SC): O(n)
*/
vector<int> twoSumBetter(vector<int>& nums, int target) {
    unordered_map<int, int> mp; // value -> index

    for(int i = 0; i < nums.size(); i++) {
        int need = target - nums[i];

        if(mp.find(need) != mp.end()) {
            return {mp[need], i};
        }
        mp[nums[i]] = i;
    }
    return {-1, -1};
}

/*
-------------------------------------------------
3) Optimal Approach (Sorting + Two Pointers)
-------------------------------------------------
Idea:
- Store value with original index
- Sort array
- Use two pointers (low & high)

Time Complexity (TC): O(n log n)
Space Complexity (SC): O(n)
*/
vector<int> twoSumOptimal(vector<int>& nums, int target) {
    vector<pair<int, int>> arr;

    // store value with index
    for(int i = 0; i < nums.size(); i++) {
        arr.push_back({nums[i], i});
    }

    sort(arr.begin(), arr.end());

    int left = 0;
    int right = arr.size() - 1;

    while(left < right) {
        int sum = arr[left].first + arr[right].first;

        if(sum == target) {
            return {arr[left].second, arr[right].second};
        }
        else if(sum < target) {
            left++;
        }
        else {
            right--;
        }
    }
    return {-1, -1};
}

/*
-------------------------------------------------
MAIN (for testing)
-------------------------------------------------
*/
int main() {
    vector<int> nums = {2, 7, 11, 15};
    int target = 9;

    vector<int> ans1 = twoSumBrute(nums, target);
    vector<int> ans2 = twoSumBetter(nums, target);
    vector<int> ans3 = twoSumOptimal(nums, target);

    cout << "Brute: " << ans1[0] << ", " << ans1[1] << endl;
    cout << "Better: " << ans2[0] << ", " << ans2[1] << endl;
    cout << "Optimal: " << ans3[0] << ", " << ans3[1] << endl;
}
